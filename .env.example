# Public (safe to commit)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ICECAT_SHOPNAME=openicecat-live

# Server-only (do NOT put real secrets in git)
DATABASE_URL=postgresql://user:pass@localhost:5432/icecat_hub?schema=public
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me_with_a_long_random_string

# Optional integrations (leave or remove if unused)
# ICECAT_SHOPNAME=openicecat-live
# NEXT_PUBLIC_ANALYTICS_ID=UA-XXXXXX-X

# Feature flags
NEXT_PUBLIC_FEATURE_ONBOARDING=true

# SMTP for email notifications (optional)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=__user__
# SMTP_PASS=__pass__
# SMTP_FROM="Icecat Hub <no-reply@yourdomain.com>"
# NEW_USER_NOTIFY_EMAIL=yagiz@icecat.com
